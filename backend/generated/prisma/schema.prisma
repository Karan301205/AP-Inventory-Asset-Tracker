generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  cust_id   Int     @id @default(autoincrement())
  cust_name String? @unique

  email   String  @unique
  phone   String?
  address String?

  transactions Transaction[] @relation("CustomerTransactions")
}

model item {
  item_id   Int     @id @default(autoincrement())
  category  String?
  item_name String? @unique

  stock Int?
  price Decimal @default(0.00)

  transactions Transaction[] @relation("ItemTransactions")
}

model Transaction {
  Bill_No   Int       @id @default(autoincrement())
  Bill_Date DateTime?

  Name      String?
  Item_Name String?

  Qty         Int?
  item_price  Decimal @default(0.00)
  Total_Price Decimal @default(0.00)

  customer Customer? @relation("CustomerTransactions", fields: [Name], references: [cust_name], map: "Transaction_customer_fkey")

  item item? @relation("ItemTransactions", fields: [Item_Name], references: [item_name], map: "Transaction_item_fkey")
}
